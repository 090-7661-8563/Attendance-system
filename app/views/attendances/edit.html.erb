<div class="row">
  <% provide(:title,"勤怠編集画面" ) %>  
  
    <%= form_for(@user, url: update_all_path, method: :post) do |f| %>
    <%= hidden_field_tag :id, @user.id %>
    <%= hidden_field_tag :first_day, @first_day %>

<!-- 最初の一行目    -->
    <table class="table table-bordered table-striped table-condensed">
    	<thead>
    		<tr>
          <!--rowspan:縦結合、colspan：横結合-->
          <th>日付</th>
          <th>曜日</th>
          <th colspan="1">出社</th>
          <th colspan="1">退社</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>残業指示</th>
          <th>指示者</th>
        </tr>
    	</thead>
    	<tbody>
    		<% @days.each do |d| %>
    		  <%= fields_for "attendances[]", d do |tf| %>
        		<tr>
        		  <!--１項：日付-->
              <td><%= d.attendance_day.to_s(:day) %></td>
                <!--２項：曜日-->
                <td><%= @week[d.attendance_day.wday] %></td>
                <td><%= tf.time_field  :started_time, class: 'form-control' %></td>
                <td><%= tf.time_field  :finished_time, class: 'form-control' %></td>
                <td></td>
                <td></td>
                <td></td>
              <td></td>
            </tr>
          <% end %>
        <% end %>
    	</tbody>
    </table>
    <center>
      <%= f.submit "編集内容で更新", style:"width:300px", class: "btn btn-primary" %>
  
      <%= link_to "キャンセル", user_url(@user, params:{first_day: @first_day }),\
      style:"width:300px", class: "btn btncancel btn-default" %>
    </center>
    <% end %>
</div>